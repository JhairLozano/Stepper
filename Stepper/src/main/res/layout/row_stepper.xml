<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line_top"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/view_id"
        app:layout_constraintEnd_toEndOf="@+id/view_id"
        app:layout_constraintStart_toStartOf="@+id/view_id"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintEnd_toStartOf="@+id/txv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/line_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_id"
        app:layout_constraintStart_toStartOf="@+id/view_id"
        app:layout_constraintTop_toBottomOf="@+id/view_id" />

    <TextView
        android:id="@+id/txv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_id"
        app:layout_constraintEnd_toEndOf="@+id/view_id"
        app:layout_constraintStart_toStartOf="@+id/view_id"
        app:layout_constraintTop_toTopOf="@+id/view_id" />

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:text="Jhair Vincenzo Lozano Angulo"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_id"
        app:layout_constraintTop_toTopOf="@+id/view_id" />

    <TextView
        android:id="@+id/txv_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/txv_title"
        app:layout_constraintStart_toStartOf="@+id/txv_title"
        app:layout_constraintTop_toBottomOf="@+id/view_id" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/roboto"
        android:text="CONTINUAR"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txv_detail"
        app:layout_constraintTop_toBottomOf="@+id/txv_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>